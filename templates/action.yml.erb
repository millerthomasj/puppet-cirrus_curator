---
### MANAGED BY PUPPET ###
actions:
  1:
    action: <%= @action %>
    description: >-
      <%= @description %>
    options:
      <% if @action == 'alias' %>name: last_week<% end %>
      <% if @action == 'close' %>delete_aliases: False<% end %>
      <% if @action == 'delete_indices' %>ignore_empty_list: True<% end %>
      <% if @action == 'forcemerge' %>max_num_segments: <%= @max_num_segments %>
      delay: <%= @delay %><% end %>
      timeout_override: <%= @request_timeout %>
      continue_if_exception: False
      disable_action: False
    <% if @action == 'alias' %>
    add:
      filters:
      - filtertype: pattern
        kind: prefix
        value: <%= @prefix %>
        exclude:
      - filtertype: age
        source: <%= @source %>
        direction: older
        timestring: <%= @timestring %>
        unit: <%= @time_unit %>
        unit_count: <%= @older_than %>
        exclude:
      - filtertype: age
        direction: younger
        timestring: '<%= @timestring %>'
        unit: days
        unit_count: <%= @newer_than %>
        exclude:
    remove:
      filters:
      - filtertype: pattern
        kind: prefix
        value: <%= @prefix %>
      - filtertype: age
        source: <%= @source %>
        direction: older
        timestring: '<%= @timestring %>'
        unit: <%= @time_unit %>
        unit_count: <%= @newer_than %>
        exclude:
    <% else %>
    filters:
    - filtertype: pattern
      kind: prefix
      value: <%= @prefix %>
      exclude:
    - filtertype: age
      source: <%= @source %>
      direction: older
      <% if @action != 'forcemerge' %>timestring: '<%= @timestring %>'<% end %>
      unit: <%= @time_unit %>
      unit_count: <%= @older_than %>
      exclude:
    <% end %>
